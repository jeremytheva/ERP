{
  "entities": {
    "GameState": {
      "title": "GameState",
      "type": "object",
      "description": "Represents the shared state of a single game simulation.",
      "properties": {
        "companyValuation": { "type": "number" },
        "netIncome": { "type": "number" },
        "inventoryValue": { "type": "number" },
        "totalEmissions": { "type": "number" },
        "teamStrategy": { "type": "string" },
        "kpiHistory": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "round": { "type": "number" },
              "companyValuation": { "type": "number" },
              "netIncome": { "type": "number" },
              "inventoryValue": { "type": "number" },
              "totalEmissions": { "type": "number" }
            },
            "required": ["round", "companyValuation", "netIncome", "inventoryValue", "totalEmissions"]
          }
        },
        "timerState": {
          "type": "object",
          "properties": {
            "timeLeft": { "type": "number" },
            "isPaused": { "type": "boolean" },
            "isBreakActive": { "type": "boolean" },
            "isBreakEnabled": { "type": "boolean" },
            "roundDuration": { "type": "number" },
            "breakDuration": { "type": "number" }
          },
          "required": ["timeLeft", "isPaused", "isBreakActive", "isBreakEnabled", "roundDuration", "breakDuration"]
        }
      },
      "required": ["companyValuation", "netIncome", "inventoryValue", "totalEmissions", "kpiHistory", "timerState"]
    },
    "Task": {
      "title": "Task",
      "type": "object",
      "description": "Represents a single actionable task for a user role.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "role": { "type": "string", "enum": ["Procurement", "Production", "Logistics", "Sales", "Team Leader"] },
        "transactionCode": { "type": "string" },
        "priority": { "type": "string", "enum": ["Critical", "High", "Medium", "Low"] },
        "estimatedTime": { "type": "number" },
        "roundRecurrence": { "type": "string", "enum": ["Once", "RoundStart", "Continuous"] },
        "startRound": { "type": "number" },
        "dependencyIDs": { "type": "array", "items": { "type": "string" } },
        "completionType": { "type": "string", "enum": ["Manual-Tick", "Data-Confirmed", "System-Validated"] },
        "taskType": { "type": "string", "enum": ["ERPsim Input Data", "ERPsim Gather Data", "Standard"] },
        "completed": { "type": "boolean" },
        "dataFields": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "fieldName": { "type": "string" },
              "dataType": { "type": "string", "enum": ["Currency", "Integer", "String"] },
              "value": { "type": ["number", "string", "null"] },
              "suggestedValue": { "type": ["number", "string", "null"] },
              "aiRationale": { "type": "string" }
            },
            "required": ["fieldName", "dataType"]
          }
        }
      },
      "required": ["id", "title", "description", "role", "transactionCode", "priority", "estimatedTime", "roundRecurrence", "dependencyIDs", "completionType", "taskType", "completed"]
    },
    "TeamSettings": {
      "title": "TeamSettings",
      "type": "object",
      "description": "Stores settings for the team, like the designated team leader.",
      "properties": {
        "teamLeader": { "type": "string", "description": "The ID of the user profile designated as the team leader." }
      }
    },
    "CompetitorLogEntry": {
      "title": "CompetitorLogEntry",
      "type": "object",
      "description": "A single entry in the competitor log.",
      "properties": {
        "text": { "type": "string" },
        "author": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["text", "author", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "/games/{gameId}": {
      "schema": { "$ref": "#/entities/GameState" },
      "description": "Stores the state of a single game instance."
    },
    "/tasks/{taskId}": {
      "schema": { "$ref": "#/entities/Task" },
      "description": "Stores the master list of all possible tasks."
    },
    "/settings/{settingsId}": {
      "schema": { "$ref": "#/entities/TeamSettings" },
      "description": "Stores shared team settings."
    },
    "/competitor_log/{logId}": {
      "schema": { "$ref": "#/entities/CompetitorLogEntry" },
      "description": "Stores entries for the competitor analysis log."
    }
  }
}